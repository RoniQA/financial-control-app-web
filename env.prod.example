# ===========================================
# NOVA AGRO - CONFIGURAÇÕES DE PRODUÇÃO
# ===========================================

# ===========================================
# BANCO DE DADOS
# ===========================================
POSTGRES_PASSWORD=nova_agro_secure_password_2024
DATABASE_URL=postgresql://nova_agro_user:nova_agro_secure_password_2024@postgres:5432/nova_agro_prod

# ===========================================
# REDIS CACHE
# ===========================================
REDIS_PASSWORD=nova_agro_redis_secure_2024
REDIS_URL=redis://:nova_agro_redis_secure_2024@redis:6379

# ===========================================
# JWT AUTHENTICATION
# ===========================================
JWT_SECRET=nova_agro_jwt_super_secure_secret_2024_change_this_in_production
JWT_REFRESH_SECRET=nova_agro_refresh_super_secure_secret_2024_change_this_in_production
JWT_EXPIRES_IN=15m
JWT_REFRESH_EXPIRES_IN=7d

# ===========================================
# MINIO OBJECT STORAGE
# ===========================================
MINIO_ROOT_USER=nova_agro_admin
MINIO_ROOT_PASSWORD=nova_agro_minio_secure_2024
MINIO_ENDPOINT=minio
MINIO_PORT=9000
MINIO_USE_SSL=false

# ===========================================
# FRONTEND
# ===========================================
VITE_API_URL=https://yourdomain.com/api

# ===========================================
# NGINX
# ===========================================
NGINX_HOST=yourdomain.com
NGINX_PORT=443

# ===========================================
# MONITORING & LOGS
# ===========================================
LOG_LEVEL=info
NODE_ENV=production

# ===========================================
# BACKUP
# ===========================================
BACKUP_SCHEDULE=0 2 * * *
BACKUP_RETENTION_DAYS=30

# ===========================================
# SECURITY
# ===========================================
# Rate limiting
RATE_LIMIT_TTL=60
RATE_LIMIT_LIMIT=100

# CORS
CORS_ORIGIN=https://yourdomain.com

# ===========================================
# EMAIL (opcional)
# ===========================================
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password
SMTP_FROM=noreply@yourdomain.com

# ===========================================
# NOTIFICAÇÕES (opcional)
# ===========================================
# Slack
SLACK_WEBHOOK_URL=https://hooks.slack.com/services/YOUR/SLACK/WEBHOOK

# Discord
DISCORD_WEBHOOK_URL=https://discord.com/api/webhooks/YOUR/DISCORD/WEBHOOK

# ===========================================
# INSTRUÇÕES
# ===========================================
# 1. Copie este arquivo para .env.prod
# 2. Altere TODAS as senhas e secrets
# 3. Configure o domínio correto
# 4. Configure SSL/TLS
# 5. Configure backup automático
# 6. Configure monitoramento
# 7. Teste em ambiente de staging primeiro
