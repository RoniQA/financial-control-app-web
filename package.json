{
  "name": "nova-agro",
  "version": "1.0.0",
  "description": "Sistema Web Nova Agro - Financeiro + Estoque + NF",
  "private": true,
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "dev": "concurrently \"npm run dev:backend\" \"npm run dev:frontend\"",
    "dev:backend": "cd apps/backend && npm run dev",
    "dev:frontend": "cd apps/frontend && npm run dev",
    "build": "npm run build:backend && npm run build:frontend",
    "build:backend": "cd apps/backend && npm run build",
    "build:frontend": "cd apps/frontend && npm run build",
    "test": "npm run test:backend && npm run test:frontend",
    "test:backend": "cd apps/backend && npm run test",
    "test:frontend": "cd apps/frontend && npm run test",
    "docker:up": "docker-compose up -d",
    "docker:down": "docker-compose down",
    "db:migrate": "cd apps/backend && npm run prisma:migrate",
    "db:seed": "cd apps/backend && npm run prisma:seed",
    "setup:local": "node setup-local.js"
  },
  "devDependencies": {
    "concurrently": "^8.2.2"
  }
}
